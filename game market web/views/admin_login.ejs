<body>    
  <div class="container">
	  <br> 
	  <br>
	  <br> <!-- TODO need to be fixed (h2 login is behind the header) -->

      <!-- show any messages that come back with authentication -->
    <% if (message.length > 0) { %>
        <div class="alert alert-danger"><%= message %></div>
    <% } %>

		<div class="col-lg-12 col-md-12 col-sm-12">
			<div class="login-box">
			  <h2 class="text-center">Admin Login</h2>
			  <form id="sign-in" role="form" action="/admin_login" method="post">
					<div class="form-group">    
						<label for="email">Email:</label>
						<input type="text" class="form-control"  placeholder="Enter username" name = "email">
					</div>
					<div class="form-group">
						<label for="pwd">Password:</label>
						<input type="password" class="form-control" name="password" placeholder="Enter password" >
					</div>

					<button type="submit" class="btn btn-primary" id="b_submit">Login</button>
					<input type="hidden" name="_csrf" value="<%= csrfToken %>">

			  </form>
			</div>
		</div>
	</div>

</body>

</html>